{
  "manifest_version": 3,
  "name": "Homepage",
  "version": "2025.9",
  "description": "A homepage for Chrome, MS Edge, Opera and Mozilla Firefox developed by MicroResearch Corporation®.",
  "author": "MicroResearch Corporation®",
  "offline_enabled": true,
  "chrome_url_overrides": {
    "newtab": "main/page.html",
    "homepage": "main/page.html"
  },
     "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main/src/page.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "/main/pop.html",
    "browser_style": false,
    "default_icon": {
      "16": "/main/src/assets/icon16.png",
      "48": "/main/src/assets/icon48.png",
      "64": "/main/src/assets/icon64.png",
      "128": "/main/src/assets/icon128.png",
      "256": "/main/src/assets/icon.png"
    }
  },
  "background": {
      "service_worker": "main/worker.js"
  },
  "icons": {
    "16": "main/src/assets/icon16.png",
    "48": "main/src/assets/icon48.png",
    "64": "main/src/assets/icon64.png",
    "128": "main/src/assets/icon128.png",
    "256": "main/src/assets/icon.png"
  },
   "permissions": [ "cookies", "tabs", "notifications", "alarms", "storage", "unlimitedStorage", "contextMenus",   "clipboardWrite", "clipboardRead", "activeTab", "scripting" ],
  "homepage_url": "https://github.com/MegaMind-Solution",
  "host_permissions": [
    "http://*/**", "https://*/**",
    "https://www.meta.ai/*",
    "https://www.chatgpt.com/*",
    "https://www.gemini.google.com/*",
    "https://www.google.com/s2/favicons/*"
  ],
  "content_security_policy": {
  "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' data: https://www.google.com https://icons.duckduckgo.com https://logo.clearbit.com; connect-src 'self' https://www.google.com https://icons.duckduckgo.com https://logo.clearbit.com;"
  },
   "incognito": "split"
}